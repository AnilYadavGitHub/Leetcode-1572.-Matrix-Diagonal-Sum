class Solution {
public:
    int diagonalSum(vector<vector<int>>& mat) {
        
        int sum = 0;
        int idx = 0;
        
        for(int i = 0 ; i < mat.size() ; i++){
            sum += mat[i][i];
        }
        
        for(int i = mat[0].size() - 1; i >= 0 ; i--){
            sum += mat[idx][i];
            idx++;
        }
        
         if(mat.size() % 2 == 1){
            sum -= mat[mat.size() / 2][mat.size() / 2];
        }
        
        return sum;
    }
};
